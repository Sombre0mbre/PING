<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.epita.assistants.myide.domain.javafx.TutorialController">
    <children>
        <GridPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="NEVER" />
                <RowConstraints vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
            </rowConstraints>
            <children>
                <FlowPane alignment="CENTER">
                    <children>
                        <Button fx:id="gitButton" mnemonicParsing="false" onAction="#gitButtonAction" text="Git">
                            <FlowPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </FlowPane.margin>
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/git-icon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                        </Button>
                        <Button fx:id="mavenButton" mnemonicParsing="false" onAction="#mavenButtonAction" text="Maven">
                            <FlowPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </FlowPane.margin>
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/maven.png" />
                           </image>
                        </ImageView>
                     </graphic>
                        </Button>
                        <Button fx:id="javaButton" mnemonicParsing="false" onAction="#javaButtonAction" text="Java">
                            <FlowPane.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                            </FlowPane.margin>
                     <graphic>
                        <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icons/java.png" />
                           </image>
                        </ImageView>
                     </graphic>
                        </Button>
                    </children>
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </FlowPane>
                <FlowPane fx:id="flowPane" alignment="CENTER" minHeight="40.0" GridPane.rowIndex="1">
                    <opaqueInsets>
                        <Insets top="10.0" />
                    </opaqueInsets>
                </FlowPane>
                <TextArea fx:id="tutorialText" editable="false" text="Text of the tutorial" GridPane.rowIndex="2" />
            </children>
        </GridPane>
    </children>
</AnchorPane>
